
  <div class="container">
      <h2 class="text-center">MIS PROYECTOS</h2>
      <br>


    <div id="pins" class="transitions-enabled">
      <% @pins.each do |pin| %>
      <div class="box panel panel-default">

        <div class="thumbnail">
          <%= image_tag(pin.photo, :class => 'img-responsive') %>
        </div>
        
        <h4 style="color: #464343; font-family: 'Source Sans Pro', sans-serif;
        " class="text-center"><%= pin.name %></h4>
      <p class="text-center">
      <span style="font-size: 12px; padding-right: 5px; border-right: 1px solid grey">De&nbsp;<a href="<%= pins_path %>"><%= pin.user.email %></a></span>
      <span style="color: #40C2C9;" > <%= pin.category.name %></span>
      </p>
              <hr>
        <div class="pad">
        <p class="text-justify" style="color: ; word-spacing: -1px; font-size: 13px; "><%= pin.description %></p>
               <div class="text-center">
                 <p> <%= link_to '', pin, :class => "glyphicon glyphicon-eye-open", :style => "font-size:18px" %> &nbsp &nbsp <a href=""  class="glyphicon glyphicon-thumbs-up " style="font-size: 18px; "></a>&nbsp &nbsp
          <% if user_signed_in? %>
         
          <%= link_to '', pin, :class => "glyphicon glyphicon-remove
", :style => "font-size:18px", method: :delete, data: { confirm: 'Estas seguro?' } %></p>
          <% end %>
          </div>
        </div>
            </div>  
      <% end %>

    </div>  

  </div>

<style>
  .pad{
 
    padding-left: 20px;
    padding-right: 20px;
    padding-top: 5px;
    padding-bottom: 10px;
  }

  
  hr{
    margin-top: 5px;

  }
  .box{
    border-radius: 5px;
  }


</style>

