<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Mis Pins</h1>
<div class="row">
<div class="col-sm-12 text-center">
<% if user_signed_in? %>
   <%= link_to 'Nuevo Pin', new_pin_path, :class => "btn btn-primary" %>
  <% end %>
</div>
</div>
<br>


<div class="row">
<div class="col-sm-12">
  <% @pins.each do |pin| %>
  <div class="col-sm-4">
    <div class="thumbnail">
      <%= pin.description %>
      <%= image_tag(pin.photo, :class => 'img-responsive') %>

      <div class="buttons" style="margin-bottom: 10px; margin-top: 10px;">
        <%= link_to 'Show', pin, :class => "btn" %>

        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_pin_path(pin), :class => "btn" %>
          <%= link_to 'Destroy', pin, :class => "btn", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
  

  <br>
  
</div>