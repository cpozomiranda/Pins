
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="well">

        <%= form_for pin, html: {multipart: true} do |f| %>
        <% if pin.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(pin.errors.count, "errores") %> no permiten guardar tu Pin</h2>

          <ul>
            <% pin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-group">
          <div class="field">
            <%= f.label :name, "Nombre" %><br>
            <%= f.text_field :name, :class => 'form-control', :placeholder => "Nombre" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
           <%= f.label :photo, "Foto" %>
           <%= f.file_field :photo %>
           <%= f.hidden_field :photo_cache %>
         </div>
       </div>



       <div class="form-group">
        <div class="field">
          <%= f.label :Category, "Categoría" %> <br>
          <%= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true, :prompt => "Seleccione una categoria" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :description, "Descripción" %>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Descripción", :rows => "5", :cols => "30" %>
        </div>
      </div> 

      

      <div class="actions">
        <%= f.submit "Crear", :class => "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div> 
