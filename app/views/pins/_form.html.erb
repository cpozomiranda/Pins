
<%= form_for(pin) do |f| %>
  <% if pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pin.errors.count, "errores") %> no permiten guardar tu Pin</h2>

      <ul>
      <% pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
  <div class="field">
    <%= f.label :photo %>
    <%= f.text_field :photo, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>
</div>  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
